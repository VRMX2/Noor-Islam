{
    "expo": {
        "name": "Noor Islam",
        "slug": "noor-islam",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/images/icon.png",
        "scheme": "noor-islam",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/images/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#0D2818"
        },
        "ios": {
            "supportsTablet": false,
            "bundleIdentifier": "com.noorislam.app",
            "infoPlist": {
                "NSLocationWhenInUseUsageDescription": "Noor Islam needs your location to show accurate prayer times.",
                "NSMicrophoneUsageDescription": "Noor Islam may use the microphone for audio features."
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/images/adaptive-icon.png",
                "backgroundColor": "#0D2818"
            },
            "package": "com.noorislam.app",
            "permissions": [
                "ACCESS_FINE_LOCATION",
                "ACCESS_COARSE_LOCATION",
                "RECEIVE_BOOT_COMPLETED",
                "VIBRATE"
            ]
        },
        "web": {
            "bundler": "metro",
            "output": "static",
            "favicon": "./assets/images/favicon.png"
        },
        "plugins": [
            "expo-router",
            "expo-font",
            [
                "expo-notifications",
                {
                    "icon": "./assets/images/notification-icon.png",
                    "color": "#1B4332",
                    "defaultChannel": "prayer"
                }
            ],
            [
                "expo-location",
                {
                    "locationAlwaysAndWhenInUsePermission": "Allow Noor Islam to use your location for prayer times."
                }
            ]
        ],
        "experiments": {
            "typedRoutes": true
        }
    }
}